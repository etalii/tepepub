bookdown::gitbook:
  css: style.css
  repo: https://github.com/etalii/tepepub
  config:
    toc:
      before: |
        <li> </li>
      after: |
        <li><a href="https://github.com/etalii/tepepub" target="blank">Ver repositorio en GitHub</a></li>
    download: ["pdf", "epub"]
bookdown::pdf_book:
  includes:
    in_header: preamble.tex
  latex_engine: xelatex
  citation_package: natbib
  keep_tex: yes
bookdown::epub_book: default
